{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "module": "esnext",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "sourceMap": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "coverage", "build", "babel.config.js", "types", "**/*.js"]
}
